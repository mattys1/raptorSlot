@{
    ViewData["Title"] = "Token Shop";
    var tokens = ViewBag.Tokens ?? 0;
    var superTokens = ViewBag.SuperTokens ?? 0;
}

<div class="container mt-4">
    <h2>Token Shop</h2>
    <p>Your current balance: <strong>@tokens tokens</strong> | <strong>@superTokens super-tokens</strong></p>

    @if (TempData["ShopSuccess"] != null)
    {
    <div class="alert alert-success">@TempData["ShopSuccess"]</div>
    }
    @if (TempData["ShopError"] != null)
    {
    <div class="alert alert-danger">@TempData["ShopError"]</div>
    }

    <div class="row mt-4">
        @{
            var offers = new (int amount, string price)[] {
                (10, "$1.00"),
                (50, "$4.00"),
                (100, "$7.00"),
                (500, "$30.00")
            };
        }

        @foreach (var offer in offers)
        {
        <div class="col-md-6 mb-4">
            <div class="card border-dark shadow-sm">
                <div class="card-body text-center">
                    <h4>@offer.amount Tokens</h4>
                    <p>Price: @offer.price</p>
                    <form asp-action="Buy" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="amount" value="@offer.amount" />
                        <button type="submit" class="btn btn-primary">Buy</button>
                    </form>
                </div>
            </div>
        </div>
        }
    </div>

    <h4 class="mt-4">Super Tokens</h4>
    <div class="row mt-3">
        @{
        var superOffers = new (int amount, string price)[] {
            (1, "$2.00"),
            (5, "$8.00"),
            (10, "$15.00"),
            (50, "$70.00")
        };
        }

        @foreach (var offer in superOffers)
        {
        <div class="col-md-6 mb-4">
            <div class="card border-warning shadow-sm">
                <div class="card-body text-center">
                    <h4>@offer.amount Super Tokens</h4>
                    <p>Price: @offer.price</p>
                    <form asp-action="BuySuper" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="amount" value="@offer.amount" />
                        <button type="submit" class="btn btn-warning">Buy Super</button>
                    </form>
                </div>
            </div>
        </div>
        }
    </div>
</div>