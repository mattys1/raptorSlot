@{
	ViewBag.Title = "Leaderboard";
}

@using raptorSlot.Controllers
@using raptorSlot.Util
@model List<AppUser>

<h2>Users with the most tokens</h2>

@if (Model.Count == 0) {
    <p>No users available.</p>
} else {
    <table class="table">
        <thead>
            <tr>
                <th>Place</th>
                <th>Username</th>
                <th>Token Amount</th>
                <th>Super Token Amount</th>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i < Model.Count; i++) {
                <tr>
                    <td>@(i + 1)</td>
                    <td>
                        <img src="@Url.Action(nameof(AvatarController.GetAvatarForUser) , ControllerStripper.StripControllerSuffix(nameof(AvatarController)), new { userId = Model[i].Id })"  alt="Avatar" style="height:40px;width:40px;border-radius:50%;"
                                  onerror="this.alt=''; this.style.display='none';" />
                        @Model[i].UserName
                    </td>
                    <td>@Model[i].Tokens</td>
                    <td>@Model[i].SuperTokens</td>
                </tr>
            }
        </tbody>
    </table>
}
