@{
	ViewBag.Title = "Leaderboard";
}

@model List<AppUser>

<h2>Users with the most tokens</h2>

@if (Model.Count == 0) {
    <p>No users available.</p>
} else {
    <table class="table">
        <thead>
            <tr>
                <th>Place</th>
                <th>Username</th>
                <th>Token Amount</th>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i < Model.Count; i++) {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].UserName</td>
                    <td>@Model[i].Tokens</td>
                </tr>
            }
        </tbody>
    </table>
}
