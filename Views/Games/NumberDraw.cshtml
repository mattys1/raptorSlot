@{
    ViewData["Title"] = "Losowanie 3 liczb";
    var balance = (int?)ViewData["Balance"] ?? 0;
}

<h2>Losowanie 3 liczb</h2>

<div class="card p-3 mb-3" style="max-width: 560px;">
    <div class="d-flex justify-content-between mb-2">
        <div>
            <strong>Saldo ¿etonów:</strong>
            <span id="balance">@balance</span>
        </div>
        <div id="balanceWarning" class="text-danger" style="display:none;">
            Brak wystarczaj¹cych ¿etonów.
        </div>
    </div>

    <div id="drawArea" class="text-center display-4 mb-3">
        <span id="n0">1</span>
        <span id="n1">1</span>
        <span id="n2">1</span>
    </div>

    <div class="mb-3">
        <label for="wagerInput" class="form-label">Ile ¿etonów chcesz obstawiæ?</label>
        <input id="wagerInput" type="number" min="1" class="form-control" value="1" />
    </div>

    <div class="d-flex gap-2">
        <button id="playBtn" class="btn btn-success">Play</button>
        <a href="@Url.Action("Index","Games")" class="btn btn-secondary">Powrót do listy gier</a>
    </div>

    <div id="message" class="mt-3"></div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script>
(function(){
    const nEls = [document.getElementById('n0'), document.getElementById('n1'), document.getElementById('n2')];
    const playBtn = document.getElementById('playBtn');
    const wagerInput = document.getElementById('wagerInput');
    const msg = document.getElementById('message');
    const balanceEl = document.getElementById('balance');
    const balanceWarning = document.getElementById('balanceWarning');

    // Parsuj initial balance z serwera
    let balance = parseInt(balanceEl.textContent, 10) || 0;

    // Jeœli brak œrodków, zablokuj przycisk
    function updateUiForBalance() {
        if (balance <= 0) {
            playBtn.disabled = true;
            balanceWarning.style.display = 'block';
        } else {
            playBtn.disabled = false;
            balanceWarning.style.display = 'none';
        }
    }

    updateUiForBalance();

    function animateShuffle(duration = 900){
        return new Promise(resolve => {
            const start = Date.now();
            const iv = setInterval(()=>{
                nEls.forEach(el => el.textContent = Math.floor(Math.random()*9)+1);
                if (Date.now() - start > duration){
                    clearInterval(iv);
                    resolve();
                }
            }, 50);
        });
    }

    // Pomoc: poka¿ alert i nie usuwaj go automatycznie. Dodaj przycisk zamkniêcia.
    function showMessage(html, type='info') {
        // type: 'success', 'warning', 'danger', 'info'
        const wrapper = document.createElement('div');
        wrapper.className = `alert alert-${type} alert-dismissible fade show`;
        wrapper.setAttribute('role','alert');
        wrapper.innerHTML = html;

        const btn = document.createElement('button');
        btn.type = 'button';
        btn.className = 'btn-close';
        btn.setAttribute('aria-label','Close');
        btn.addEventListener('click', ()=> wrapper.remove());

        wrapper.appendChild(btn);

        // usuñ poprzednie komunikaty jeœli chcesz tylko 1 (tu zachowujemy wszystkie, ale mo¿esz czyœciæ msg.innerHTML)
        // msg.innerHTML = '';
        msg.prepend(wrapper); // nowe komunikaty pojawiaj¹ siê na górze
    }

    playBtn.addEventListener('click', async ()=>{
        // Walidacja po stronie klienta: czy ma wystarczaj¹co ¿etonów?
        const wager = parseInt(wagerInput.value,10);
        if (!wager || wager <= 0){ showMessage('Podaj poprawn¹ liczbê ¿etonów.', 'warning'); return; }

        if (balance <= 0) { showMessage('Nie masz ¿etonów — nie mo¿esz graæ.', 'warning'); updateUiForBalance(); return; }

        if (wager > balance) { showMessage('Nie mo¿esz obstawiæ wiêcej ni¿ masz na koncie.', 'warning'); return; }

        // zablokuj przycisk na czas losowania/¿¹dania
        playBtn.disabled = true;

        // animacja tasowania
        await animateShuffle(1000);

        // Pobierz token anty-CSRF z ukrytego inputa generowanego przez @Html.AntiForgeryToken()
        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
        const token = tokenInput ? tokenInput.value : '';

        // Przygotuj dane
        const form = new FormData();
        form.append('wager', wager);

        try{
            const r = await fetch('@Url.Action("PlayNumberDraw","Games")', {
                method: 'POST',
                credentials: 'same-origin',
                headers: { 'RequestVerificationToken': token },
                body: form
            });

            // Najpierw sprawdŸ status HTTP
            if (!r.ok) {
                // Spróbuj odczytaæ JSON z b³êdem lub tekst
                let txt;
                try { txt = await r.text(); } catch(e) { txt = r.statusText || 'B³¹d serwera'; }
                showMessage(`B³¹d serwera: ${r.status} ${txt}`, 'danger');
                return;
            }

            const json = await r.json();

            if (!json.success){
                showMessage(json.error || 'B³¹d', 'danger');
            } else {
                const draw = json.draw;
                nEls.forEach((el,i)=> el.textContent = draw[i]);

                // Aktualizujemy saldo w UI (serwer zwraca aktualne balance)
                balance = parseInt(json.balance, 10) || balance;
                balanceEl.textContent = balance;
                updateUiForBalance();

                if (json.delta > 0){
                    showMessage(`Wygra³eœ! Zmiana ¿etonów: +${json.delta}. Nowy stan: ${json.balance}`, 'success');
                } else {
                    showMessage(`Przegra³eœ. Zmiana ¿etonów: ${json.delta}. Nowy stan: ${json.balance}`, 'warning');
                }
            }
        } catch(e){
            // Jeœli fetch rzuci wyj¹tek — poka¿ trwa³y b³¹d (np. po³¹czenia)
            showMessage('B³¹d po³¹czenia. Spróbuj ponownie.', 'danger');
            console.error(e);
        } finally {
            // Odblokuj tylko jeœli saldo > 0 (je¿eli saldo <=0 updateUiForBalance zablokuje)
            if (balance > 0) playBtn.disabled = false;
            else updateUiForBalance();
        }
    });
})();
    </script>
}