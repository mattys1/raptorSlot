@{
    ViewData["Title"] = "Losowanie 1 liczby";
    var tokens = (int?)ViewData["Tokens"] ?? 0;
    var superTokens = (int?)ViewData["SuperTokens"] ?? 0;
}

<h2>Draw 1 number</h2>

<div class="card p-3 mb-3" style="max-width: 560px;">
    <div class="d-flex justify-content-between mb-2">
        <div>
            <strong id="balanceLabel">Token balance:</strong>
            <span id="balanceDisplay">@tokens</span>
        </div>
        <div id="balanceWarning" class="text-danger" style="display:none;">
            Not enough tokens.
        </div>
    </div>

    <div class="text-center display-4 mb-3">
        <div id="draw-display" class="border p-3" style="font-size:48px; font-weight:bold; width:120px; margin: 0 auto;">
            <span id="rolling-number">ï¿½</span>
        </div>
    </div>

    <form id="single-form" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-2">
            <label class="form-label">Number of tokens:</label>
            <input id="wager" name="wager" type="number" min="1" value="1" class="form-control" />
        </div>

        <div class="form-check mb-2">
            <input id="usePremium" name="usePremium" type="checkbox" class="form-check-input" />
            <label class="form-check-label" for="usePremium">Use premium tokens</label>
        </div>

        <div class="mb-3">
            <label class="form-label">Choose number:</label>
            <select id="chosenNumber" name="chosenNumber" class="form-select">
                @for (int i = 1; i <= 9; i++)
                {
                <option value="@i">@i</option>
                }
            </select>
        </div>

        <div class="d-flex gap-2">
            <button id="play-btn" type="button" class="btn btn-success">Play</button>
            <a href="@Url.Action("Index","Games")" class="btn btn-secondary">Return to games</a>
        </div>

        <div id="message" class="mt-3"></div>
    </form>
</div>

@section Scripts {
    <script>
(function(){
    const playBtn = document.getElementById('play-btn');
    const wagerInput = document.getElementById('wager');
    const premiumCheck = document.getElementById('usePremium');
    const chosenSelect = document.getElementById('chosenNumber');

    const rollingSpan = document.getElementById('rolling-number');
    const msg = document.getElementById('message');

    const balanceDisplay = document.getElementById('balanceDisplay');
    const balanceLabel = document.getElementById('balanceLabel');
    const balanceWarning = document.getElementById('balanceWarning');

    let currentTokens = @tokens;
    let currentSuperTokens = @superTokens;

    function updateNavTokens(newTokens, newSuperTokens) {
        try {
            const navTokensEl = document.getElementById('navTokensCount');
            if (navTokensEl && typeof newTokens !== 'undefined' && newTokens !== null) {
                navTokensEl.textContent = newTokens;
            }
            const navSuperEl = document.getElementById('navSuperTokensCount');
            if (navSuperEl && typeof newSuperTokens !== 'undefined' && newSuperTokens !== null) {
                navSuperEl.textContent = newSuperTokens;
            }
        } catch(e) {
            console.warn('Unable to update the counter in nav', e);
        }
    }

    function getCurrentBalance() {
        return premiumCheck.checked ? currentSuperTokens : currentTokens;
    }

    function updateUiState() {
        const isPremium = premiumCheck.checked;
        const bal = getCurrentBalance();

        balanceLabel.textContent = isPremium ? "Premium Tokens number:" : "Regular Tokens number:";
        balanceDisplay.textContent = bal;

        if (isPremium) {
            playBtn.classList.remove('btn-success');
            playBtn.classList.add('btn-warning');
        } else {
            playBtn.classList.remove('btn-warning');
            playBtn.classList.add('btn-success');
        }

        if (bal <= 0) {
            playBtn.disabled = true;
            balanceWarning.style.display = 'block';
            balanceWarning.textContent = isPremium ? "No premium tokens" : "No regular Tokens";
        } else {
            playBtn.disabled = false;
            balanceWarning.style.display = 'none';
        }
    }

    premiumCheck.addEventListener('change', updateUiState);
    updateUiState();

    function showMessage(html, type='info') {
        const wrapper = document.createElement('div');
        wrapper.className = `alert alert-${type} alert-dismissible fade show`;
        wrapper.setAttribute('role','alert');
        wrapper.innerHTML = html;

        const btn = document.createElement('button');
        btn.type = 'button';
        btn.className = 'btn-close';
        btn.setAttribute('aria-label','Close');
        btn.addEventListener('click', ()=> wrapper.remove());

        wrapper.appendChild(btn);
        msg.prepend(wrapper);
    }

    function animateRolling(duration = 900){
        return new Promise(resolve => {
            const start = Date.now();
            const iv = setInterval(()=>{
                rollingSpan.textContent = Math.floor(Math.random()*9)+1;
                if (Date.now() - start > duration){
                    clearInterval(iv);
                    resolve();
                }
            }, 60);
        });
    }

    async function refreshNavBalance() {
        try {
            const r = await fetch('@Url.Action("GetBalance","Games")', {
                method: 'GET',
                credentials: 'same-origin',
                cache: 'no-store'
            });
            if (!r.ok) return;
            const json = await r.json();
            if (json && json.success) {
                if (typeof json.tokens !== 'undefined') currentTokens = parseInt(json.tokens, 10);
                if (typeof json.superTokens !== 'undefined') currentSuperTokens = parseInt(json.superTokens, 10);

                updateUiState();
                updateNavTokens(json.tokens, json.superTokens);
            }
        } catch(err) {
            console.warn('refreshNavBalance failed', err);
        }
    }

    function getAntiForgeryToken() {
        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
        return tokenInput ? tokenInput.value : null;
    }

    playBtn.addEventListener('click', async ()=>{
        const wager = parseInt(wagerInput.value,10);
        const isPremium = premiumCheck.checked;
        const chosenNumber = parseInt(chosenSelect.value,10);

        if (!wager || wager <= 0){ showMessage('input a correct number of tokens.', 'warning'); return; }
        const activeBalance = getCurrentBalance();
        if (activeBalance <= 0) {
            showMessage('You do not have enough tokens.', 'warning');
            updateUiState();
            return;
        }
        if (wager > activeBalance) {
            showMessage(`You cannot wage tokens than what you have in your account (${activeBalance}).`, 'warning');
            return;
        }

        playBtn.disabled = true;
        await animateRolling(1000);

        const token = getAntiForgeryToken() || '';

        const form = new FormData();
        form.append('wager', wager);
        form.append('usePremium', isPremium);
        form.append('chosenNumber', chosenNumber);

        try {
            const r = await fetch('@Url.Action("PlaySingleNumber","Games")', {
                method: 'POST',
                credentials: 'same-origin',
                headers: { 'RequestVerificationToken': token },
                body: form,
                cache: 'no-store'
            });

            if (!r.ok) {
                let txt;
                try { txt = await r.text(); } catch(e) { txt = r.statusText || 'Server error'; }
                showMessage(`Server error: ${r.status} ${txt}`, 'danger');
                await refreshNavBalance();
                return;
            }

            const json = await r.json();

            if (!json.success) {
                showMessage(json.error || 'Error', 'danger');
                if (typeof json.tokens !== 'undefined') currentTokens = json.tokens;
                if (typeof json.superTokens !== 'undefined') currentSuperTokens = json.superTokens;
                updateUiState();
                updateNavTokens(json.tokens, json.superTokens);
            } else {
                const draw = json.draw;
                rollingSpan.textContent = draw;

                if (typeof json.tokens !== 'undefined') currentTokens = parseInt(json.tokens, 10);
                if (typeof json.superTokens !== 'undefined') currentSuperTokens = parseInt(json.superTokens, 10);

                updateUiState();
                updateNavTokens(json.tokens, json.superTokens);

                const delta = json.delta || 0;
                const currencyName = isPremium ? "Premium" : "tokens";
                const balanceNow = isPremium ? currentSuperTokens : currentTokens;

                if (delta > 0) {
                    showMessage(`You got it! You get: +${delta} ${currencyName}. New balance: ${balanceNow}`, 'success');
                } else {
                    showMessage(`Fail. Change: ${delta} ${currencyName}. New balance: ${balanceNow}`, 'warning');
                }
            }
        } catch (err) {
            console.error(err);
            showMessage('Connection error, try again.', 'danger');
            await refreshNavBalance();
        } finally {
            playBtn.disabled = false;
        }
    });

})();
    </script>
}